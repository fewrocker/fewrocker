<!-- Access data.flats with owner's name as key -->
<% flat = data.flatsa[owner] %>
<% check = "<i class='fa fa-check'></i>" %>
<% check = "<i class='fa fa-check'></i>" %>

<div class="flat-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= "https://kitt.lewagon.com/placeholder/cities/"+flat.city_slug %>')">
  <div class="banner-content">
    <h1><%= flat.name %></h1>
  </div>
</div>



<div class="wrapper-flat">
  <div class="container-flat">
    <div class="basic-info-card">
      <div class="col-xs-4 text-center">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{flat.link}", class:"user-img img-circle" %>
        <p class="flat-user-name"><%=flat.owner%></p>
      </div>
      <div class="col-xs-8 flat-info">
        <h2><%=flat.description%></h2>
        <p><%=flat.city_name%></p>
        <div class="ratings">
          <ul class="list-inline text-center">
            <li class="rating-float"><%= flat.rating.to_f.round(1) %></h3>
            <% flat.rating.times do %>
              <li class="stars"><i class="fa fa-star"></i></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container-form text-center">
    <form class="form-inline">
      <div class="form-group">
        <label for="exampleInputName2"></label>
        <input type="text" class="form-control" id="checkin" placeholder="Check in date">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail2"></label>
        <input type="email" class="form-control" id="checkout" placeholder="Check out date">
      </div>
      <div class="form-group margin-left">
        <label for="exampleInputEmail2">Number of Guests</label>
      </div>
      <select class="form-control">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4+</option>
      </select>
    </form>
    <button type="submit" class="btn btn-book margin-left">Book now!</button>
  </div>
</div>

<div class="wrapper-flat-info">
  <div class="container-flat-info">
    <div class="about-flat">
      <h2>About this flat</h2>
      <p><%= flat.long_description %></p>
    </div>
    <div class="flat-detailed-info">
      <div class="col-xs-2 col-xs-offset-1">
        <h3 class="info-title">The space</h3>
      </div>
      <div class="col-xs-4 light-left-margin">
        <h3 class="info-title-lesser">Beds: <strong><%=flat.beds%></strong></h3>
        <h3 class="info-title-lesser">Bathrooms: <strong><%=flat.bathrooms%></strong></h3>
        <h3 class="info-title-lesser">Bedrooms: <strong><%=flat.bedrooms%></strong></h3>
      </div>
    </div>
    <div class="col-xs-2">
      <h3 class="info-title">Ammenities</h3>
    </div>
    <div class="col-xs-3 light-left-margin">
      <h3 class="info-title-lesser">Wifi: <%=flat.wifi ? "<i class='fa fa-check'></i>" : "<i class='fas fa-times'></i>" %></h3>
      <h3 class="info-title-lesser">Pets: <%=flat.pets ? "<i class='fa fa-check'></i>" : "<i class='fas fa-times'></i>" %></h3>
      <h3 class="info-title-lesser">Smoking: <%=flat.smoking ? "<i class='fa fa-check'></i>" : "<i class='fas fa-times'></i>" %></h3>
    </div>
  </div>
</div>



